<div class="container">
  <% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @user.errors.full_messages.each do |message|%>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <br>


  <div class="form-login box text-center">
    <h1>Sign up for Instagram-clone</h1>
    <p>Check out your friend's Pictures</p>
    <%= form_with(model: @user, local: true) do |form|%>
    <p><%= form.text_field :name, placeholder: 'name', class: "log-in-tag" %></p>
    <br>
    <p><%= form.email_field :email, placeholder: 'email', class: "log-in-tag" %></p>
    <br>
    <p><%= form.password_field :password, placeholder: 'password', class: "log-in-tag" %></p>
    <br>
    <p><%= form.password_field :password_confirmation, placeholder: 'password_confirmation', class: "log-in-tag" %></p>
    <br>
    <p>
      <%= form.label :image, class: "log-in-tag" %>
      <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
    </p>

    <%= form.submit "Create my account" , class: "btn btn-primary"  %>
    <p>Already have an accountï¼Ÿ<%= link_to 'Login', new_session_path %></p>
  </div>
  <% end %>


</div>
