<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <%= favicon_link_tag 'icon.png' %>
  </head>

  <body>
    <body>
    <header class="header_container">

        <% if logged_in? %>
          <ul>
            <li><button type="button" class="btn btn-default"><%= link_to "My profile", user_path(current_user.id) %></li>
            <li><button type="button" class="btn btn-primary"><%= link_to "New Post", new_post_path %></li>
            <li><button type="button" class="btn btn-default"><%= link_to "Favorite", favourite_user_path(current_user.id) %></li>
            <li><button type="button" class="btn btn-danger"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
          </ul>
          <% else %>
          <ul>
            <li><button type="button" class="btn btn-default"><%= link_to "Login", new_session_path %></li>
            <li><button type="button" class="btn btn-primary"><%= link_to "Join", new_user_path %></li>
          </ul>
      <% end %>
    </header>
    <% flash.each do |key, value| %>
    <div class="alert alert-danger" role="alert">
      <%= content_tag(:div, value, class: "#{key}") %>
    </div>
    <% end %>

    <%= render 'shared/navbar'  %>
    <%= yield %>
  </body>
</html>
